{
  "manifest_version": 3,
  "name": "ConsentCanvas",
  "version": "1.0",
  "description": "AI-powered cookie consent manager",
  "permissions": ["scripting", "storage", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
